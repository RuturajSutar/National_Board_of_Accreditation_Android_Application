<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeopleRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:paddingTop="50dp"
                app:srcCompat="@drawable/loginman" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="  Full Name :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/myname"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>
            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="  Email :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/mymail"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="  Mobile Number :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/mymobile"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="5dp" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:spinnerMode="dialog" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:spinnerMode="dialog" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:spinnerMode="dialog" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>


            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="  Date of Birth :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="  DD-MM-YYYY"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/myname"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />



            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>

            <TextView
                android:id="@+id/textView60"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="  Password :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/mypassword"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="5dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>


            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button2"
                android:text="Register" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>